<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADD_USER"
    tools:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/select_student_image"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="65dp"
                    android:text="select" />

                <ImageView
                    android:id="@+id/student_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp" />

            </LinearLayout>


            <EditText
                android:id="@+id/student_name"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:hint="   Student name"
                android:shadowColor="@color/teal_200" />

            <EditText
                android:id="@+id/student_roll"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:hint="   Student roll"
                android:shadowColor="@color/teal_200" />

            <EditText
                android:id="@+id/student_reg"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:hint="   Student registration" />

            <EditText
                android:id="@+id/student_session"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:hint="   Student Session" />

            <EditText
                android:id="@+id/student_phone_number"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:hint="   Student Phone Number" />

            <EditText
                android:id="@+id/student_permanent_address"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:hint="Enter Permanent Address"
                />
            <EditText
                android:id="@+id/student_present_address"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:hint="Enter Present Address"
                />

            <Button
                android:id="@+id/add_new_user"
                android:layout_width="250dp"
                android:layout_height="71dp"
                android:layout_marginStart="73dp"
                android:layout_marginTop="80dp"
                android:text="Add  New Student" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>